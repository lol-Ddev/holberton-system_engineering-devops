#!/usr/bin/env bash
#  script that will display information about subdomains.

if [ "$#" -eq 1 ];
then
	dig www."$1" | grep -A1 'ANSWER SECTION:' | awk ' NR==2 {print "The subdomain is a " $4 " record and points to " $5}'
	dig lb-01."$1" | grep -A1 'ANSWER SECTION:' | awk ' NR==2 {print "The subdomain is a " $4 " record and points to " $5}'
	dig web-01."$1" | grep -A1 'ANSWER SECTION:' | awk ' NR==2 {print "The subdomain is a " $4 " record and points to " $5}'
	dig web-02."$1" | grep -A1 'ANSWER SECTION:' | awk ' NR==2 {print "The subdomain is a " $4 " record and points to " $5}'
else
	dig "$2"."$1" | grep -A1 'ANSWER SECTION:' | awk ' NR==2 {print "The subdomain is a " $4 " record and points to " $5}'
fi
